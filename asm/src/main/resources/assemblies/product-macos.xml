<?xml version="1.0"?>

<!-- This must match the install descriptor except for the format -->
<!-- Generally this descriptor must match the install descriptor except for the
format. However, due to the fact that Mac OS wants programs to be installed in
the /Applications folder with a specific structure, that structure is defined in
this install descriptor, but not in this descriptor. Note that all paths in this
descriptor *do not* start with ${project.name}.app/Contents/.-->

<assembly>
	<id>product-macos</id>
	<formats>
		<format>jar</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>target/jlink</directory>
			<outputDirectory/>
		</fileSet>
		<fileSet>
			<directory>target/main/images</directory>
			<outputDirectory>bin</outputDirectory>
			<includes>
				<include>${project.artifactId}.*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>source/main/assembly/resources</directory>
			<outputDirectory>bin</outputDirectory>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>target/jlink/bin/java</source>
			<outputDirectory>bin</outputDirectory>
			<fileMode>0755</fileMode>
		</file>
		<file>
			<source>target/jlink/bin/keytool</source>
			<outputDirectory>bin</outputDirectory>
			<fileMode>0755</fileMode>
		</file>
		<file>
			<source>target/jlink/bin/${project.artifactId}</source>
			<outputDirectory>bin</outputDirectory>
			<fileMode>0755</fileMode>
		</file>
		<file>
			<source>source/main/assembly/macos/Info.plist</source>
			<outputDirectory/>
			<filtered>true</filtered>
			<fileMode>0644</fileMode>
		</file>
		<file>
			<source>source/main/assembly/macos/${project.artifactId}</source>
			<outputDirectory>MacOS</outputDirectory>
			<fileMode>0755</fileMode>
		</file>
		<file>
			<source>target/main/images/${project.artifactId}.png</source>
			<outputDirectory>Resources</outputDirectory>
			<fileMode>0644</fileMode>
		</file>
	</files>
</assembly>
